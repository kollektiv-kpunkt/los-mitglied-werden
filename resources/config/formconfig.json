{
  "steps": {
    "welcome": {
      "type": "contentblocks",
      "blocks": [
        {
          "type": "title",
          "size": "h1",
          "content": "welcome.title",
          "class": "text-white text-6xl font-bold mb-6"
        },
        {
          "type": "text",
          "content": "welcome.text",
          "class": "text-white text-2xl mb-6"
        },
        {
          "type": "buttons",
          "buttons": [
            {
              "label": "button.member",
              "markup": "button",
              "type": "los-memberform",
              "class": "los-button-next text-xl",
              "action": "func:s_type_init(member)|goto:name"
            },
            {
              "label": "button.activist",
              "markup": "button",
              "type": "los-memberform",
              "class": "los-button-next text-xl los-button-neg",
              "action": "func:s_type_init(activist)|goto:name"
            }
          ]
        }
      ]
    },
    "name": {
      "type": "inputs",
      "title": "name.title",
      "fields": [
        {
          "name": "fname",
          "type": "text",
          "label": "fname.label",
          "required": true
        },
        {
          "name": "lname",
          "type": "text",
          "label": "lname.label",
          "required": true
        }
      ],
      "validation": {
        "fname": {
          "presence": true
        },
        "lname": {
          "presence": true
        }
      },
      "next": "salutation"
    },
    "salutation": {
      "type": "radios",
      "title": "salutation.title",
      "choices": [
        {
          "label": "salutation.mrs.label",
          "value": "mrs"
        },
        {
          "label": "salutation.mr.label",
          "value": "mr"
        },
        {
          "label": "salutation.neutral.label",
          "value": "neutral"
        }
      ],
      "validation": {
        "salutation": {
          "presence": true
        }
      },
      "next": "email"
    },
    "email": {
      "type": "inputs",
      "title": "email.title",
      "fields": [
        {
          "name": "email",
          "type": "email",
          "size": "-w-full",
          "required": true
        }
      ],
      "validation": {
        "email": {
          "presence": true,
          "email": true
        }
      },
      "next": "phone"
    },
    "phone": {
      "type": "inputs",
      "title": "phone.title",
      "fields": [
        {
          "name": "phone",
          "type": "tel",
          "size": "-w-full",
          "placeholder": "placeholder.optional"
        }
      ],
      "validation": {
        "phone": {
          "format": "^((0041|0)|\\B\\+41)(\\s?\\(0\\))?(\\s)?[1-9]{2}(\\s)?[0-9]{3}(\\s)?[0-9]{2}(\\s)?[0-9]{2}$"
        }
      },
      "next": {
        "type_activist": "supporttype",
        "ELSE": "membertype"
      }
    },
    "membertype": {
      "type": "radios",
      "title": "membertype.title",
      "direction": "vertical",
      "name": "membertype",
      "required": true,
      "choices": [
        {
          "label": "membertype.regular.label",
          "value": "regular"
        },
        {
          "label": "membertype.reduced.label",
          "value": "reduced"
        },
        {
          "label": "membertype.u20.label",
          "value": "u20"
        },
        {
          "label": "membertype.couple.label",
          "value": "couple"
        },
        {
          "label": "membertype.group.label",
          "value": "group"
        },
        {
          "label": "membertype.supporter.label",
          "value": "supporter"
        }
      ],
      "validation": {
        "membertype": {
          "presence": true
        }
      },
      "next": "address"
    },
    "address": {
      "type": "inputs",
      "title": "address.title",
      "fields": [
        {
          "name": "street",
          "type": "text",
          "label": "street.label",
          "required": true,
          "size": "-w-full"
        },
        {
          "name": "zip",
          "type": "text",
          "label": "zip.label",
          "required": true
        },
        {
          "name": "city",
          "type": "text",
          "label": "city.label",
          "required": true
        }
      ],
      "validation": {
        "street": {
          "presence": true
        },
        "zip": {
          "presence": true
        },
        "city": {
          "presence": true
        }
      },
      "next": "lang"
    },
    "lang": {
      "type": "radios",
      "title": "lang.title",
      "name": "lang",
      "choices": [
        {
          "label": "lang.de.label",
          "value": "de"
        },
        {
          "label": "lang.fr.label",
          "value": "fr"
        },
        {
          "label": "lang.it.label",
          "value": "it"
        },
        {
          "label": "lang.en.label",
          "value": "en"
        }
      ],
      "validation": {
        "lang": {
          "presence": true
        }
      },
      "next": "birthyear"
    },
    "birthyear": {
      "type": "inputs",
      "title": "birthyear.title",
      "fields": [
        {
          "name": "birthyear",
          "type": "number",
          "placeholder": "placeholder.optional",
          "size": "-w-full"
        }
      ],
      "validation": {
        "birthyear": {}
      },
      "next": "notes"
    },
    "notes": {
      "type": "inputs",
      "title": "notes.title",
      "fields": [
        {
          "name": "notes",
          "placeholder": "placeholder.optional",
          "type": "text",
          "size": "-w-full"
        }
      ],
      "validation": {
        "notes": {}
      },
      "next": "cta"
    },
    "cta": {
      "type": "contentblocks",
      "blocks": [
        {
          "type": "title",
          "size": "h1",
          "content": "cta.title",
          "class": "text-white text-6xl font-bold mb-6"
        },
        {
          "type": "text",
          "content": "cta.text",
          "class": "text-white text-2xl mb-6"
        },
        {
          "type": "buttons",
          "buttons": [
            {
              "label": "button.activist",
              "markup": "button",
              "type": "los-memberform",
              "class": "los-button-next los-button-neg text-xl",
              "action": "func:s_type_add(activist)|goto:supporttype"
            },
            {
              "label": "button.rather-not",
              "markup": "button",
              "type": "los-memberform",
              "class": "los-button-next text-xl",
              "action": "goto:thanks"
            }
          ]
        }
      ]
    },
    "supporttype": {
      "type": "radios",
      "title": "supporttype.title",
      "direction": "vertical",
      "multiple": true,
      "required": true,
      "choices": [
        {
          "label": "homepage.label",
          "value": "homepage"
        },
        {
          "label": "events.label",
          "value": "events"
        },
        {
          "label": "demos.label",
          "value": "demos"
        },
        {
          "label": "lectorate.label",
          "value": "lectorate"
        },
        {
          "label": "translation.label",
          "value": "translation"
        },
        {
          "label": "photography.label",
          "value": "photography"
        },
        {
          "label": "catering.label",
          "value": "catering"
        },
        {
          "label": "barkeeping.label",
          "value": "barkeeping"
        },
        {
          "label": "socialmedia.label",
          "value": "socialmedia"
        },
        {
          "label": "meetingpoints.label",
          "value": "meetingpoints"
        },
        {
          "label": "graphicdesign.label",
          "value": "graphicdesign"
        },
        {
          "label": "other.label",
          "value": "other"
        }
      ],
      "validation": {
        "supporttype[]": {
          "presence": true
        }
      },
      "next": "locations"
    },
    "locations": {
      "type": "radios",
      "title": "locations.title",
      "direction": "horizontal",
      "multiple": true,
      "choices": [
        {
          "label": "zuerich.label",
          "value": "zuerich"
        },
        {
          "label": "bern.label",
          "value": "bern"
        },
        {
          "label": "luzern.label",
          "value": "luzern"
        },
        {
          "label": "basel.label",
          "value": "basel"
        },
        {
          "label": "winterthur.label",
          "value": "winterthur"
        },
        {
          "label": "stgallen.label",
          "value": "stgallen"
        }
      ],
      "validation": {
        "locations[]": {}
      },
      "next": "thanks"
    },
    "thanks": {
      "type": "contentblocks",
      "finished": true,
      "blocks": [
        {
          "type": "title",
          "size": "h1",
          "content": "thanks.title",
          "class": "text-white text-6xl font-bold mb-6"
        },
        {
          "type": "text",
          "content": "thanks.text",
          "class": "text-white text-2xl mb-6"
        }
      ]
    }
  }
}